@{
    ViewBag.Title = "FANG DebugAPI";
    Layout = "~/views/shared/_viewfang.cshtml";
}

@section headers{
    <environment names="Development">
        <link href="~/css/fang/debugapi.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/css/min/debugapi.min.css" rel="stylesheet" />
    </environment>
}

@section footers{
    <environment names="Development">
        <script src="~/js/fang/debugapi.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/min/debugapi.min.js"></script>
    </environment>
}

@model WebMvcState.Models.FANGDebugAPIOutModel

<a asp-controller="" asp-action="" class="hide"></a>
<div class="DebugAPI">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2 panel-title">
                                <h4>API Debug tool</h4>
                            </div>
                            <div class="col-xs-2 small">
                                <input type="button" class="btn btn-default ajax_debug" value="调试" data-enable="1" />
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="col-xs-12">$.ajax({</div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">type:</div>
                                    <div class="col-xs-2">
                                        <select class="ajax_type">
                                            <option value="get">GET</option>
                                            <option value="post">POST</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">contentType:</div>
                                    <div class="col-xs-2">
                                        <select class="ajax_contentType">
                                            <option value="application/json">application/json</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">dataType:</div>
                                    <div class="col-xs-2">
                                        <select class="ajax_dataType">
                                            <option value="json">JSON</option>
                                            <option value="html">HTML</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">data:</div>
                                    <div class="col-xs-10">
                                        <textarea class="col-xs-8 ajax_data"></textarea>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">url:</div>
                                    <div class="col-xs-10">
                                        <input type="text" class="col-xs-8 ajax_url" />
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">success:</div>
                                    <div class="col-xs-10">
                                        <textarea class="col-xs-8 ajax_success"></textarea>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">error:</div>
                                    <div class="col-xs-10">
                                        <textarea class="col-xs-8 ajax_error"></textarea>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-2">complete:</div>
                                    <div class="col-xs-10">
                                        <textarea class="col-xs-8 ajax_complete"></textarea>
                                    </div>
                                </div>
                                <div class="col-xs-12">});</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer"></div>
                </div>
            </div>
        </div>
    </div>
</div>